public class HexaPawn {
    
    public static void main (String[] args) {
        Player firstPlayer;
	Player secondPlayer;
	
	System.out.println("Welcome to HexaPawn!");
	
	int row = Integer.parseInt(args[0]);
	int col = Integer.parseInt(args[1]);

	System.out.println(args[2]);
	System.out.println(args[3]);
	
	while (true) {
	    if (args[2].equals("comp")) {
		firstPlayer = new ComputerPlayer('*');
		break;
	    } else if (args[2].equals("human")) {
		firstPlayer = new HumanPlayer('*');
		break;
	    } else if (args[2].equals("rand")) {
		firstPlayer = new RandomPlayer('*');
		break;
	    } else {
		System.out.println("Please enter a correct input");
		System.exit(0);
	    }
	    
	}
	
	while(true){
	    if(args[3].equals("comp")) {
		secondPlayer = new ComputerPlayer('o');	
		break;
	    }else if(args[3].equals("human")) {
		secondPlayer = new HumanPlayer('o');
		break;
	    }else if(args[3].equals("rand")){
		secondPlayer = new RandomPlayer('o');
		break;
	    }else{
		System.out.println("Please enter a correct input");
		System.exit(0);
	    }
	}
	
       	GameTree gt = new GameTree(new HexBoard(row,col), '*');
	firstPlayer.play(gt, secondPlayer);
	
    }
    
}
